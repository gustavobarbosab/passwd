<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bigTitle"
            type="String" />

        <variable
            name="smallTitle"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registerBigTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bigTitle}"
            android:textColor="#262C53"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bem vindo," />

        <TextView
            android:id="@+id/registerSmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#262C53"
            android:text="@{smallTitle}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/registerBigTitle"
            tools:text="é muito bom ter você conosco" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>