<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@drawable/bg_box_text_input_color</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:background">@drawable/bg_password_text_field</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorGrayDark</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
